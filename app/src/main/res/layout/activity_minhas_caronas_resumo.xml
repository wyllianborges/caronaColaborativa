<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.up.caronaup.MinhasCaronasResumoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resumo da carona:"
        android:id="@+id/txtResumoTitulo"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Condutor:"
        android:id="@+id/txtCondutorResumoTitulo"
        android:layout_below="@+id/txtResumoTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wyllian Borges"
        android:id="@+id/txtCondutorResumo"
        android:layout_below="@+id/txtCondutorResumoTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Localização de saída"
        android:id="@+id/txtLocalizacaoResumoTitulo"
        android:layout_below="@+id/imageResumoWyll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R. Monsenhor Ivo Sanlorenzi, 158"
        android:id="@+id/txtLocalizacaoResumo"
        android:layout_below="@+id/txtLocalizacaoResumoTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Horario de saída:"
        android:id="@+id/txtHorarioResumoTitulo"
        android:layout_below="@+id/txtLocalizacaoResumo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="07:30 AM"
        android:id="@+id/txtHorarioResumo"
        android:layout_below="@+id/txtHorarioResumoTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar pagamento"
        android:id="@+id/buttonPagamentoResumo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageResumoWyll"
        android:layout_below="@+id/txtCondutorResumo"
        android:layout_alignRight="@+id/txtHorarioResumo"
        android:layout_alignEnd="@+id/txtHorarioResumo"
        android:src="@drawable/wyll_perf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modelo do veículo:"
        android:id="@+id/txtModeloResumoTitulo"
        android:layout_below="@+id/txtHorarioResumo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Onix LTZ Branco"
        android:id="@+id/txtModeloResumo"
        android:layout_below="@+id/txtModeloResumoTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
