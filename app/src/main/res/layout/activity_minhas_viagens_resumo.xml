<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.up.caronaup.MinhasViagensResumoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ponto de partida"
        android:id="@+id/txtResViagLocTitulo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R. Monsenhor Ivo Zanlorenzi, 158"
        android:id="@+id/txtResViagLoc"
        android:layout_below="@+id/txtResViagLocTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Horario de saÃ­da"
        android:id="@+id/txtResViagHoraTitulo"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/txtResViagLoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="07:30"
        android:id="@+id/txtResViagHora"
        android:layout_below="@+id/txtResViagHoraTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Passageiros (2/3)"
        android:id="@+id/txtResViagPassageirosTitulo"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/txtResViagHora"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Andre de Avila"
        android:id="@+id/txtResViagPassageiros1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Flavia Bittencurt"
        android:id="@+id/txtResViagPassageiros2"
        android:layout_below="@+id/buttonResgatarPagPass1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regatar pagamento"
        android:id="@+id/buttonResgatarPagPass1"
        android:layout_alignTop="@+id/txtResViagPassageiros1"
        android:layout_toRightOf="@+id/txtResViagPassageirosTitulo"
        android:layout_toEndOf="@+id/txtResViagPassageirosTitulo"
        android:textColor="#cb1b1b" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regatar pagamento"
        android:id="@+id/buttonResgatarPagPass2"
        android:layout_alignTop="@+id/txtResViagPassageiros2"
        android:layout_alignLeft="@+id/buttonResgatarPagPass1"
        android:layout_alignStart="@+id/buttonResgatarPagPass1"
        android:textColor="#cb1b1b" />
</RelativeLayout>
