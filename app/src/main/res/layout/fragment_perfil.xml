<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    tools:context=".PerfilFragment">


    <ImageView
        android:id="@+id/imageFotoPerfil"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_alignLeft="@+id/textViewCursoPerfil"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewCursoPerfil"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

    <TextView
        android:id="@+id/textViewNomePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageFotoPerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Wyllian Borges"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewCursoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNomePerfil"
        android:layout_centerHorizontal="true"
        android:text="Sistemas de Informação"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/ratingMotorista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.7"
        android:stepSize="0"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewCaronasFornecidasPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewCursoPerfil"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="24 Canonas fornecidas"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorItensPerfil"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewCaronasFornecidasPerfil"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="13 Caronas pegas"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorItensPerfil"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating motorista"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorItensPerfil"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating passageiro"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorItensPerfil"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_below="@+id/ratingMotorista"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18"
        android:layout_marginTop="10dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingPassageiro"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/ratingMotorista"
        android:layout_alignStart="@+id/ratingMotorista"
        android:numStars="5"
        android:rating="4.3"
        android:stepSize="0" />

</RelativeLayout>
